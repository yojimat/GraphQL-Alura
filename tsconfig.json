{
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "rootDirs": [
            "api"
        ],
        "outDir": "dist",
        "lib": [
            "es2020"
        ],
        "strict": true,
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": [
            "node"
        ]
    },
    "ts-node": {
        "esm": true
    }
}